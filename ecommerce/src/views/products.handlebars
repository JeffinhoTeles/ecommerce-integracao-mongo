<h1>Lista de Produtos</h1>
<h1>🛍️ Lista de Produtos</h1>

<a href="/cart">
  <button>🛒 Ver Carrinho</button>
</a>
<p>Bem-vindo, {{user.name}} ({{user.role}})</p>
<a href="/logout">Logout</a>

<div>
  {{#each payload}}
    <div>
      <h3>{{this.title}}</h3>
      <p>{{this.description}}</p>
      <p>R$ {{this.price}}</p>

      <form
        method="POST"
        action="/api/fs/carts/{{this.cartId}}/product/{{this._id}}"
      >
        <button type="submit">Adicionar ao Carrinho</button>
      </form>
    </div>
  {{/each}}
</div>

<div>
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}">⬅️ Página Anterior</a>
  {{/if}}

  <span style="margin: 0 10px;">Página {{page}} de {{totalPages}}</span>

  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}">Próxima Página ➡️</a>
  {{/if}}
</div>